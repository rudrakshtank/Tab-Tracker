{
  "manifest_version": 3,
  "name": "Website Time Tracker (7 Days)",
  "version": "1.0.0",
  "description": "Tracks time spent on websites with 7-day history and today's detailed view.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}